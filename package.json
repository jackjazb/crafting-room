{
    "private": true,
    "type": "module",
    "engines": {
        "node": ">=20.11"
    },
    "workspaces": [
        "cms",
        "frontend"
    ],
    "scripts": {
        "dev": "pnpm exec nx run-many -t dev",
        "lint": "pnpm exec nx run-many -t lint",
        "frontend": "pnpm pnpm --filter frontend start",
        "frontend-dev": "pnpm run workspace frontend dev",
        "frontend-build": "pnpm run workspace frontend build",
        "cms": "pnpm run workspace cms run start",
        "cms-dev": "pnpm run workspace cms strapi develop",
        "cms-build": "pnpm run workspace cms run build"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.8",
        "@eslint/js": "^9.25.1",
        "@next/eslint-plugin-next": "^14.1.4",
        "@nx/eslint": "20.8.0",
        "@stylistic/eslint-plugin": "^4.2.0",
        "@types/node": "^20.10.5",
        "nx": "20.8.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    }
}